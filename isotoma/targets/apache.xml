<?xml version="1.0" encoding="UTF-8"?>
<project name="isotoma.targets.apache" default="build_conf">
    <property file="isotoma/base.properties" override="no"/>
    <mkdir dir="${isotoma.vardir}/apache"/>
    <target name="build_conf">
        <php returnProperty="php_include_path" function="get_include_path" />
        <property name="isotoma.apache.php_include_path" value="${php_include_path}" override="no"/>

        <copy file="isotoma/apache/vhost.conf" tofile="${isotoma.vardir}/apache/vhost.conf" overwrite="true">
            <filterchain>
                <expandproperties />
            </filterchain>
	</copy>
        <echo>Generated ${isotoma.vardir}/apache/vhost.conf</echo>
    </target>
</project>
