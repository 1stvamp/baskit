<?xml version="1.0" encoding="UTF-8"?>
<project name="baskit.phing.targets.apache" default="build_conf">
    <property file="baskit/phing/base.properties" override="no"/>
    <mkdir dir="${baskit.vardir}/apache"/>
    <target name="build_conf">
        <php returnProperty="php_include_path" function="get_include_path" />
        <property name="baskit.phing.apache.php_include_path" value="${php_include_path}" override="no"/>

	<copy file="baskit/phing/apache/vhost.conf" tofile="${baskit.vardir}/apache/vhost.conf" overwrite="true">
            <filterchain>
                <expandproperties />
            </filterchain>
	</copy>
        <echo>Generated ${isotoma.vardir}/apache/vhost.conf</echo>
    </target>
</project>
